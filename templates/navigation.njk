<nav class="navigation" role="tree" aria-label="Site Navigation">
  {% for item in sitemap %}
  <js-selectsummary type="menu" {{ 'open' if item.page === title }} role="treeitem" aria-label="{{ item.page }}">
    <a slot="value" href="{{ item.filename }}">{{ item.page }}</a>
    {% for section in item.sections %}
      <a class="selectSummary--option" href="{{ item.filename }}#{{ section.slug }}">{{ section.anchor }}</a>
    {% endfor %}
  </js-selectsummary>
  {% endfor %}
</nav>