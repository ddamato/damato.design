.content-section {
  background-color: var(--box--backgroundColor);
  border: 1px solid var(--box--borderColor);
  color: var(--box--foregroundColor);
  border-radius: 2px;
  padding: 1rem;
  margin-bottom: 1rem;
  position: relative;

  &[data-page]:before {
    content: attr(data-page);
    float: right;
    text-transform: uppercase;
    font-size: .75rem;
    font-weight: 500;
    color: var(--box--borderColor);
    padding-left: 1rem;
    padding-bottom: 1rem;
  }

  > :last-child {
    margin-bottom: 0 !important;
  }

  p {
    margin: 2rem 0;
  }

  h1 {
    font-size: var(--textHeading1--fontSize);
    font-weight: var(--textHeading1--fontWeight);
    font-family: var(--textHeading1--fontFamily);
    line-height: var(--textHeading1--lineHeight);
    text-transform: lowercase;
    letter-spacing: -.05em;
  }

  h2 {
    font-size: var(--textHeading2--fontSize);
    font-weight: var(--textHeading2--fontWeight);
    font-family: var(--textHeading2--fontFamily);
    line-height: var(--textHeading2--lineHeight);
    text-transform: lowercase;
    letter-spacing: -.05em;
  }

  h3 {
    font-size: var(--textHeading3--fontSize);
    font-weight: var(--textHeading3--fontWeight);
    font-family: var(--textHeading3--fontFamily);
    line-height: var(--textHeading3--lineHeight);
    text-transform: uppercase;
    margin-top: 2em;
    margin-bottom: 0;
  }

  h4 {
    font-size: var(--textHeading4--fontSize);
    font-weight: var(--textHeading4--fontWeight);
    font-family: var(--textHeading4--fontFamily);
    line-height: var(--textHeading4--lineHeight);
    text-transform: uppercase;
    margin-top: 2em;
    margin-bottom: 0;
  }

  [slot="value"] + h3, [slot="value"] + h4 {
    margin-top: 1rem;
  }

  h1, h2, & > h3:first-child {
    margin: -.1em 0 1em;
  }

  h1 strong,
  h2 strong,
  h3 strong {
    color: var(--accent--defaultColor);
  }

  img {
    max-width: 100%;
  }

  ul:not([class]) {
    list-style: none;
    --customMarker--setting: 1.5rem;
    padding-left: var(--customMarker--setting);

    & > li:before {
      content: "\0000bb";
      color: var(--accent--defaultColor);
      margin-left: calc(var(--customMarker--setting) * -1);
      width: var(--customMarker--setting);
      display: inline-block;
      transform: translateX(0);
      transition: .218s ease;
    }

    & > li:hover:before {
      transform: translateX(.5rem);
    }

    & > li:not(:last-child) {
      margin-bottom: 1.5rem;
    }

  }

  hr {
    border-color: var(--box--borderColor);
  }

  table {
    display: block;
    overflow-x: auto;
    width: 100%;
    text-align: left;
    border: 1px solid var(--boxLowContrast--borderColor);
    margin: 1rem 0;
  }

  th {
    border-bottom: 1px solid var(--boxLowContrast--borderColor);
    text-transform: capitalize;
  }
  
  table th,
  table td {
    padding: .5rem;
  }

  blockquote {
    background-color: var(--accent--defaultColor);
    color: var(--onAccent--defaultColor);
    margin: 0;
    border-radius: 2px;
    font-style: italic;
    font-size: var(--textQuote--fontSize);
    font-weight: var(--textQuote--fontWeight);
    line-height: var(--textQuote--lineHeight);
    position: relative;
    padding: 1rem;
    padding-left: 3.5rem;
  }

  blockquote a,
  blockquote a:hover {
    color: inherit;
    text-decoration: underline;
    background: transparent;
  }

  blockquote:before {
    content: url("data:image/svg+xml;base64,");
    position: absolute;
    transform: scaleX(-1);
    width: 1.5rem;
    height: 1.5rem;
    left: 1rem;
    top: 1rem;
  }

  blockquote p:first-child {
    margin-top: -.25em;
  }

  blockquote p:last-child {
    margin-bottom: -.25em;
  }

  blockquote em {
    display: block;
    text-align: right;
    font-size: var(--textCaption--fontSize);
    font-weight: var(--textCaption--fontWeight);
    line-height: var(--textCaption--lineHeight);
    margin: 1rem;
    margin-right: -1rem;
    margin-bottom: 2rem;
    float: right;
    width: calc(100% + 3.5rem);
    color: var(--box--foregroundColor);
  }

  blockquote em:before {
    content: "\002014";
    margin-right: 1ch;
    text-decoration: none;
    color: inherit;
  }

  .audience-designer {
    display: block;
    margin: 3rem 0;
    --accent--defaultColor: var(--accent--designerColor);
  }

  .audience-engineer {
    display: block;
    margin: 3rem 0;
    --accent--defaultColor: var(--accent--engineerColor);
  }

  .badge {
    display: inline-block;
    padding: 0 .5rem;
    border-radius: 2px;
  }

  .swatch {
    padding: 0 2rem;
    border: 1px solid var(--boxHighContrast--borderColor);
  }
}
