code.hljs {
  white-space: pre-wrap;
  border-radius: 2px;
  border: 1px solid var(--boxLowContrast--borderColor);
  color: var(--boxLowContrast--foregroundColor);
  background-color: var(--boxLowContrast--backgroundColor);

  .hljs-addition, .hljs-bullet, .hljs-string, .hljs-symbol {
    color: var(--accent--defaultColor);
  }
}