*, *::before, *::after {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  --navigationHeight: calc(var(--density--md) * 1rem);
  --scrollOffset: calc(var(--navigationHeight) - 1px);
}

body {
  margin: 0;
  background-color: var(--boxLowContrast--backgroundColor);
  color: var(--boxLowContrast--foregroundColor);
  font-family: var(--textParagraph--fontFamily);
  font-size: var(--textParagraph--fontSize);
  font-weight: var(--textParagraph--fontWeight);
  line-height: var(--textParagraph--lineHeight);
  letter-spacing: .02em;
  transition: opacity 1s ease;
  opacity: 1;
}

body {
  --bgGradient--start: 20%;
  --bgGradient--end: 80%;
  --bgOuter--color: var(--box--backgroundColor);
  --bgInner--color: var(--boxLowContrast--backgroundColor);
  background-attachment: fixed;
  background-image: -moz-linear-gradient(45deg,  var(--bgOuter--color) 0%, var(--bgOuter--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--end), var(--bgOuter--color) var(--bgGradient--end), var(--bgOuter--color) 100%);
  background-image: -webkit-linear-gradient(45deg,  var(--bgOuter--color) 0%, var(--bgOuter--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--end), var(---bgOuter--color) var(--bgGradient--end), var(--bgOuter--color) 100%);
  background-image: linear-gradient(45deg,  var(--bgOuter--color) 0%, var(--bgOuter--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--start), var(--bgInner--color) var(--bgGradient--end), var(--bgOuter--color) var(--bgGradient--end), var(--bgOuter--color) 100%);
}

em {
  font-style: italic;
  font-variation-settings: "ital" 1;
}

main a {
  padding: .5rem;
  margin: -.5rem;
  box-decoration-break: clone;
  -webkit-box-decoration-break: clone;
  color: currentColor;
  border-radius: 2px;
  text-decoration: none;
  background-image: linear-gradient( var(--accent--defaultColor),  var(--accent--defaultColor));
  background-position: center calc(100% - .5rem);
  background-repeat: no-repeat;
  background-size: calc(100% - 1rem) 1px;
  transition: background-size .3s;
}

main a:hover {
  text-decoration: none;
  background-color: var(--accent--defaultColor);
  color: var(--onAccent--defaultColor);
}

a:focus {
  outline: 1px var(--focused--outlineStyle) var(--control--outlineColor);
}

a.offline {
  position: relative;
}

a.offline::before {
  --offlinemask--warning: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCI+PGc+PHBhdGggZD0iTTAgMGgyNHYyNEgweiIgZmlsbD0ibm9uZSIvPjxwYXRoIGQ9Ik0xIDIxaDIyTDEyIDIgMSAyMXptMTItM2gtMnYtMmgydjJ6bTAtNGgtMnYtNGgydjR6Ii8+PC9nPjwvc3ZnPg==");
  content: "" / "This content is not available, please visit when reconnected to the internet.";
  -webkit-mask: var(--offlinemask--warning);
  mask: var(--offlinemask--warning);
  border: 1px dashed var(--accent--defaultColor);
  background-color: currentColor;
  margin-left: 1ch;
  position: absolute;
  display: inline-block;
  top: 0;
  left: 0;
  width: 1em;
  height: 1em;
  margin: -.5em;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}

.app {
  min-height: 100vh;
  padding-left: calc(var(--density--md) * 1rem);
  display: flex;
  margin: 0 auto;
  max-width: 1000px;
  width: 100%;
  justify-content: center;
  margin-bottom: calc(var(--density--xl) * 1rem);
}

.app > aside {
  flex-shrink: 0;
  width: 240px;
  background-color: var(--box--backgroundColor);
  color: var(--box--foregroundColor);
  border-radius: 2px;
  position: sticky;
  top: calc(var(--density--md) * 1rem);
  align-self: flex-start;
  z-index: 2;
  display: flex;
  flex-direction: column;
  max-height: calc(100vh - var(--density--lg) * 1rem);
}

.header {
  display: flex;
  align-items: center;
  padding: calc(var(--density--sm) * 1rem) calc(var(--density--md) * 1rem);
  position: relative;
  border: 1px solid var(--box--borderColor);
}

.logo {
  margin: calc(var(--density--sm) * 1rem) 0;
  border: 1px solid transparent;
  color: inherit;
  display: inline-flex;
}

.logo:focus {
  outline: 0;
  border-bottom: 1px solid currentColor;
}

.logo svg {
  width: 100%;
}

.navigation {
  border: 1px solid var(--box--borderColor);
  border-top: 0;
  padding: 0;
  overflow-y: auto;
  overscroll-behavior: contain;
}

.navigation > * {
  display: block;
  margin: calc(var(--density--sm) * 1rem) 0;
}

.nav-button {
  margin-left: auto;
  cursor: pointer;
  display: none;
  font-weight: var(--textAction--fontWeight);
  text-transform: uppercase;
  align-items: center;
  border: 1px solid transparent;
}

#navigation-toggle {
  position: fixed;
  opacity: 0;
  pointer-events: none;
  display: none;
}

#navigation-toggle:focus + aside .nav-button {
  border-bottom: 1px solid var(--control--outlineColor);
}

.app > main {
  flex-grow: 0;
  margin: calc(var(--density--md) * 1rem);
  max-width: calc(200% / 3);
}

.controls {
  display: flex;
  background-color: var(--box--backgroundColor);
  border: 1px solid var(--box--borderColor);
  color: var(--box--foregroundColor);
  border-radius: 2px;
  margin-bottom: calc(var(--density--md) * 1rem);
  justify-content: space-between;
  overflow-x: auto;
  padding: calc(var(--density--md) * 1rem);
}

.controls > :not(:last-child) {
  margin-right: calc(var(--density--md) * 1rem);
}

.disclaimer {
  font-family: var(--textCaption--fontFamily);
  font-size: var(--textCaption--fontSize);
  font-weight: var(--textCaption--fontWeight);
  line-height: var(--textCaption--lineHeight);
  color: var(--boxLowContrast--foregroundColor);
  opacity: .5;
}

.bg-everyone {
  background-color: var(--accent--everyoneColor);
  color: var(--onAccent--defaultColor);
}

.bg-designer {
  background-color: var(--accent--designerColor);
  color: var(--onAccent--defaultColor);
}

.bg-engineer {
  background-color: var(--accent--engineerColor);
  color: var(--onAccent--defaultColor);
}

#audience-designer {
  --toggleRange--accentColor: var(--accent--designerColor);
}

#audience-engineer {
  --toggleRange--accentColor: var(--accent--engineerColor);
}

.content-anchor {
  margin-top: calc(var(--scrollOffset) * -1);
  padding-top: var(--scrollOffset);
}

.style-reset, .skip-link {
  position: fixed;
  bottom: 0;
  right: 0;
  margin: calc(var(--density--md) * 1rem);
  transform: translateY(calc(var(--density--xl) * 1rem));
  opacity: 0;
  transition: .218s ease;
  z-index: 1;
  box-shadow: 0 12px 16px -8px var(--boxElevated--shadowColor);

  & svg-icon {
    margin-left: 1ch;
  }
}

html[style] .style-reset,
.skip-link:focus {
  transform: translateY(0);
  opacity: 1;
}

@media screen and
  (prefers-reduced-motion: reduce), 
  (update: slow) {
  * {
    animation-duration: 0.001ms !important;
    animation-iteration-count: 1 !important; /* Hat tip Nick/cssremedy (https://css-tricks.com/revisiting-prefers-reduced-motion-the-reduced-motion-media-query/#comment-1700170) */
    transition-duration: 0.001ms !important;
  }
}

@media print {
  .screen-only {
    display: none !important;
  }

  .app > main {
    margin: 0;
  }
}